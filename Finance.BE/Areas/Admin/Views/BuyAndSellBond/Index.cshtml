                                    columns.Bound(p => p.CustomerName).Title("Khách hàng").Width(200);
                                    columns.Bound(p => p.AssetName).Title("Loại tài sản").Width(150);
                                    columns.Bound(p => p.ContractName).Title("Tên hợp đồng").Width(200);
