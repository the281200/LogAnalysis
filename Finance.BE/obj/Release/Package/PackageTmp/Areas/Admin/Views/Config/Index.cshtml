@model WebConfigViewModel
@{

    ViewBag.Title = "Thay đổi cài đặt hệ thống";

}
<div class="alert alert-primary left-icon-big" role="alert" id="alert" style="display: none;">
    Thay đổi cài đặt hệ thống thành công!
</div>
<div class="userprofile">
    <p class="d-block text-center-header title-table">CÀI ĐẶT HỆ THỐNG</p>
    <div class="row">

        <div class="col-lg-12">
            <div class="card">

                <div class="card-body" style=" margin-top: 50px; padding-left: 40px;">
                    <div class="form-validation">
                        @using (Ajax.BeginForm("ChangeConfig", "Config", new { area = "Admin" },
                                new AjaxOptions
                                {
                                    OnSuccess = "OnChangeSuccess"

                                }, new { @class = "form-valide", @id = "ChangePassForm" }))
                        {

                            <script>

                                function OnChangeSuccess(data, status, xhr) {

                                    if (data.Success) {
                                        $("#alert").css("display", "block");
                                        $("#alert").fadeTo(3000, 800).slideUp(800, function () {
                                            $("#alert").slideUp(800);
                                        });


                                    }
                                }
                            </script>


                            <div>
                                <div class="form-group row">
                                    <div class="col-lg-2">
                                        @Html.Label("Email nhận thông tin", new { @for = "new", @class = "col-form-label" })

                                    </div>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(m => m.EmailReceive, new { @name = "new", @class = "form-control input-rounded" })

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-2">
                                        @Html.Label("Email gửi thông tin", new { @for = "new", @class = "col-form-label" })

                                    </div>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(m => m.EmailSend, new { @name = "new", @class = "form-control input-rounded" })

                                    </div>
                                </div>

                                <div class="form-group row" style="position:relative;">
                                    <div class="col-lg-2">
                                        @Html.Label("Mật khẩu email gửi", new { @for = "new", @class = "col-form-label" })

                                    </div>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(m => m.EmailSendPassword, new { @name = "new", @class = "form-control input-rounded", @type = "password" })
                                        <div class="input-group-addon email-pass">
                                            <i class="fas fa-eye-slash"></i>
                                            <i class="fas fa-eye"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-2">
                                        @Html.Label("Đường dẫn FTP nhật ký máy chủ", new { @for = "new", @class = "col-form-label" })

                                    </div>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(m => m.LinkLog, new { @name = "new", @class = "form-control input-rounded" })

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-2">
                                        @Html.Label("Số yêu cầu tối đa/phút", new { @for = "new", @class = "col-form-label" })

                                    </div>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(m => m.Threshold, new { @name = "new", @class = "form-control input-rounded" })

                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-2">
                                        @Html.Label("Số lần đăng nhập cho phép/phút", new { @for = "new", @class = "col-form-label" })

                                    </div>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(m => m.LoginAttempt, new { @name = "new", @class = "form-control input-rounded" })

                                    </div>
                                </div>

                                <div class="validation-group">
                                    <div class="controls">
                                        @Html.ValidationSummary(true)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-2">

                                    </div>
                                    <div class="col-lg-8 ">
                                        <button type="submit" class="btn btn-primary">@Resources.Common.SaveChanges</button>
                                    </div>
                                </div>

                            </div>
                            @Html.AntiForgeryToken()
                        }

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $(".fa-eye").hide();

        $(".fa-eye-slash").click(function () {
            $(this).toggleClass("fas fa-eye-slash");
            $(this).toggleClass("fas fa-eye");

            var input = $("#EmailSendPassword");
            if (input.attr("type") === "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }

        });

        $(".fa-eye").click(function () {
            $(this).toggleClass("fas fa-eye-slash");
            $(this).toggleClass("fas fa-eye");

            var input = $("#EmailSendPassword");
            if (input.attr("type") === "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }

        });
    });
</script>

