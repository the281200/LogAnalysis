@model WebModels.TypeOfAsset
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}
@using (Html.BeginForm("Add", "TypeOfAssets", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-change-car" }))
{
    <div>
        <div class="flex">
            <div class="width-text-modal">
                @Html.Label("Mã tài sản", new { @class = "control-label margin-text-role" })
                <span class="form-obligatory">*</span>
            </div>
            <div>
                @Html.TextBoxFor(m => m.AssetId, new { type = "text", name = "Tên nhóm", @class = "input-block-level" })
                @Html.ValidationMessageFor(m => m.AssetId)
                @Html.ValidationSummary(true)
            </div>
        </div>
        <div class="flex">
            <div class="width-text-modal">
                @Html.Label("Tên tài sản", new { @class = "control-label margin-text-role" })
                <span class="form-obligatory">*</span>
            </div>
            <div>
                @Html.TextBoxFor(m => m.AssetName, new { type = "text", name = "Title", @class = "input-block-level" })
                @Html.ValidationMessageFor(m => m.AssetName)
                @Html.ValidationSummary(true)
            </div>
        </div>
        <div class="flex">
            <div class="width-text-modal">
                @Html.Label("Ghi chú", new { @class = "control-label margin-text-role" })
            </div>
            <div>
                @Html.TextAreaFor(m => m.Note, new { type = "text", name = "Mô tả nhóm", @class = "input-area-level" })
                @Html.ValidationMessageFor(m => m.Note)
                @Html.ValidationSummary(true)
            </div>
        </div>
        <div class="validation-group"><div class="controls">@Html.ValidationSummary(true)</div></div>
        <div class="form-actions"><button class="btn btn-primary" type="submit"><i class="icon-save"></i>@Resources.Common.SaveChanges</button></div> @Html.AntiForgeryToken()
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        if (screen.width > 1500) {
            top.winsetup("Thêm loại hình tài sản", 600, 300, true);
        } else if (screen.width < 450) {
            top.winsetup("Thêm loại hình tài sản", 335, 300, true);
        }
        else {
            top.winsetup("Thêm loại hình tài sản", 600, 300, true);
        }
    });
    function create_success() {
        top.winclose();
        top.$("#grid").data("kendoGrid").dataSource.read();
        window.parent.show_stack_bottom_right('success', 'Thêm loại hình tài sản', 'Thêm thành công.');
    }
</script>