@model WebModels.LocalPasswordModel
@{
    TempData["Title"] = Utility.UseStringHasValue("Đổi mật khẩu");
    Layout = "/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.UserName != null)
{
    <div class="authincation login-form">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    @*<div class="text-center mb-3">
                                        <a href="index.html"><img src="/Content/themes/admin/img/tlbonds.jpg" alt=""></a>
                                    </div>*@
                                    <h4 class="text-center mb-4 text-title-forgot">ĐỔI MẬT KHẨU</h4>
                                    @using (Html.BeginForm("ChangePasswordForgot", "Account", new { userName = ViewBag.UserName, token = ViewBag.Token },
                                                    FormMethod.Post,
                                                    new { enctype = "multipart/form-data", @class = "form", @id = "changeForm" }
                                                    ))
                                    {

                                        <div class="form-group">
                                            <label class="mb-1 text-white"><strong>Mật khẩu</strong></label>
                                            @Html.TextBoxFor(m => m.NewPassword, new { @placeholder = "Mật khẩu mới", @type = "password", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.NewPassword)
                                            @*<input type="email" class="form-control" value="hello@example.com">*@
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white"><strong>Xác nhận mật khẩu</strong></label>
                                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @placeholder = "Xác nhận mật khẩu", @type = "password", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                            @*<input type="password" class="form-control" value="Password">*@
                                        </div>

                                        <div class="text-center">
                                            <button type="submit" class="btn bg-white text-primary btn-block">Đổi mật khẩu</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <span>Đường link đã quá hạn vui lòng yêu cầu <a href="/">cấp lại mật khẩu</a>! </span>
}
