@model WebModels.LocalPasswordModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Customer", new { userName = ViewBag.UserName }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-change-car" }))
{
<div>
    <div class="flex">
        <div class="width-text-modal">
            @Html.LabelFor(m => m.NewPassword, new { @for = "pw", @class = "control-label" })
        </div>
        <div>
            @Html.PasswordFor(m => m.NewPassword, new { name = "Mật khẩu mới", @class = "input-block-level" })
            @Html.ValidationMessageFor(m => m.NewPassword)

        </div>
    </div>
    <div class="flex">
        <div class="width-text-modal">
            @Html.LabelFor(m => m.ConfirmPassword, new { @for = "pw", @class = "control-label" })
        </div>
        <div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { name = "Nhập lại mật khẩu mới", @class = "input-block-level" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)

        </div>
    </div>
    <div class="validation-group">
        <div class="controls">
            @Html.ValidationSummary(true)
        </div>
    </div>
    <div class="form-actions">
        <button class="btn btn-primary" type="submit">@Resources.Common.SaveChanges</button>
    </div>
</div>
    @Html.AntiForgeryToken()
}
<script type="text/javascript">
    $(document).ready(function () {
        top.winsetup("@Html.Raw(Resources.Common.ChangePassword)", 500, 180, true);
    });
    function change_success() {
        top.$("#window").data("kendoWindow").close(); 
        window.parent.show_stack_bottom_right('success', 'Đổi mật khẩu', 'Đổi thành công.');

    }
</script>
